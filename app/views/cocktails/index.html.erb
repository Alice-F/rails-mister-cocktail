<div class="container">

<h1>Liste des cocktails</h1>

<div class="cards">

  <% @cocktails.each do |cocktail| %>
    <div class="card-product">

      <% if cocktail.photo? %>
        <%= cl_image_tag cocktail.photo, height: 150, width: 200, crop: :fill %>
      <% end %>
      <div class="card-product-infos">
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
      </div>

    </div>
  <% end %>

</div>

  <%= link_to "Create a new Cocktail", new_cocktail_path %>

</div>



